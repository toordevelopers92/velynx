{
  "name": "velynx-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm -C packages/core build && pnpm -C packages/js build",
    "docs:build": "pnpm -C packages/docs docs:build",
    "test": "pnpm -C packages/core test && pnpm -C packages/js test",
    "lint": "pnpm -C packages/core lint && pnpm -C packages/js lint && pnpm -C packages/docs lint",
    "format": "prettier -w ."
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.21.5"
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "postcss": "^8.4.40",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.3.3",
    "stylelint": "^16.8.2",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-config-standard": "^36.0.0",
    "typescript": "^5.5.4"
  }
}
